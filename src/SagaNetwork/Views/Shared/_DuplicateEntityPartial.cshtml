@* ReSharper disable once Mvc.ActionNotResolved *@
<form asp-action="Duplicate" asp-route-sourceEntityId="@Model.Id" class="form-horizontal">
    <div class="form-group">
        <div class="col-md-offset-6 col-md-3">
            <label class="sr-only" for="newEntityId">New entity ID</label>
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-duplicate" aria-hidden="true"></span></div>
                <input name="newEntityId" type="text" class="form-control" id="newEntityId" placeholder="New entity ID" required>
            </div>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-default btn-block">Duplicate</button>
        </div>
    </div>
</form>