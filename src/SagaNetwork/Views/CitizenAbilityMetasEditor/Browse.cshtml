@model IEnumerable<CitizenAbilityMeta>

@{
    ViewData["Title"] = "Citizen Ability Metas";
}

@Html.Partial("_SearchEntityPartial")
@Html.Partial("_AddEntityPartial")

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>ProbabilityWeight</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var abilityMeta in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => abilityMeta.Id)</td>
                    <td>@Html.DisplayFor(modelItem => abilityMeta.ProbabilityWeight)</td>
                    <td>@Html.RenderEditEntityButton(abilityMeta.Id)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Html.Partial("_BrowseLimitPartial")
@Html.Partial("_NotFoundPartial")
