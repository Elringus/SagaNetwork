@model IEnumerable<ArenaMeta>

@{
    ViewData["Title"] = "Arena Metas";
}

@Html.Partial("_SearchEntityPartial")
@Html.Partial("_AddEntityPartial")

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Map</th>
                <th>Mode</th>
                <th>Max Players</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var arenaMeta in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => arenaMeta.Id)</td>
                    <td>@Html.DisplayFor(modelItem => arenaMeta.Map)</td>
                    <td>@Html.DisplayFor(modelItem => arenaMeta.Mode)</td>
                    <td>@Html.DisplayFor(modelItem => arenaMeta.MaxPlayers)</td>
                    <td>@Html.RenderEditEntityButton(arenaMeta.Id)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Html.Partial("_BrowseLimitPartial")
@Html.Partial("_NotFoundPartial")
